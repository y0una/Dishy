
<div class="white-bg">

  <% @categories.each do |category| %>
  <h2><%= link_to category.name, category_dishes_path(category) %></h2>
  <ul>
    <% category.dishes.sort_by{ |dish| dish.votes.count }.reverse[0..4].each do |dish| %>
      <div class="dish-line">
      <li>
        <span class="vote-count" id="vote-count-<%= dish.id %>"><%= dish.votes.count %></span> <%= render partial: "votes/vote", locals: { dish: dish } %> <span class="dish-title"> <%= link_to dish.title, category_dish_path(category, dish) %> </span>
      </li>
      </div>
    <% end %>
  </ul>
<% end %>

</div>

