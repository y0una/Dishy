
<body id="log-in">
<h2 class="login-title">Log in</h2>

<div class="x-up-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "input-field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "remember" %>
      <%= f.label :remember_me, class: "remember" %>
    </div>
  <% end %>

  <div class="field" id="actions">
    <%= f.submit "Log In", id: "submit-btn"%>
  </div>
<% end %>
  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>

</body>