<div class="row">
  <div class="col-md-4">
    <div class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <h1>Hello, <%= current_user.username %>!!!</h1>
      </h1>
    </div>
  </div>
</div>


# total votes/likes for ALL their recipes

<%= link_to "Edit profile", edit_user_registration_path(current_user) %>

<h2>My Recipes</h2>
<ul>
  <% @user.dishes.each do |dish| %>
  <!-- Put recipe votes in the li element adjacent to the dish link  -->
    <li><%= link_to dish.title, category_dish_path(dish.category,dish) %></li>
  <% end %>
</ul>
